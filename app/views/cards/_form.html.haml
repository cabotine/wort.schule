= box padding: false do
  = simple_form_for @card do |f|
    = box_content do
      = f.input :name, autofocus: true
      = f.input :description
      = f.input :template
      = f.input :word_type, include_blank: false
      = f.input :visibility, include_blank: false

    = box_footer do
      = f.submit
      = cancel_button @card.new_record? ? cards_path : card_path(@card)
